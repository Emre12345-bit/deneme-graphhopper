<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.graphhopper" level="info"/>
    
    <!-- Traffic-specific debug logging -->
    <logger name="com.graphhopper.traffic" level="DEBUG"/>
    <logger name="com.graphhopper.traffic.TrafficDataService" level="INFO"/>
    <logger name="com.graphhopper.traffic.TrafficAwareCustomModelCreator" level="INFO"/>
    <logger name="com.graphhopper.traffic.TrafficAwareRequestTransformer" level="INFO"/>
    <logger name="com.graphhopper.traffic.EdgeGeometryMatcher" level="DEBUG"/>

    <root level="warn">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>